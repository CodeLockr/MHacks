<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewlocker1.mhacks.MainPage">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="@string/Grains1"
        android:id="@+id/buttonGrain1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="94dp"
        android:onClick="sendmessage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Grains"
        android:id="@+id/buttonGrain2"
        android:layout_alignBottom="@+id/buttonGrain1"
        android:layout_toEndOf="@+id/buttonGrain1"
        android:onClick="sendmessage"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Grains"
        android:id="@+id/buttonGrain3"
        android:layout_alignBottom="@+id/buttonGrain2"
        android:layout_toEndOf="@+id/buttonGrain2"
        android:onClick="sendmessage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:text="Vegetables"
        android:id="@+id/buttonVegetabes"
        android:layout_above="@+id/buttonGrain1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:onClick="sendmessage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:text="Fruits"
        android:id="@+id/buttonFruits"
        android:layout_above="@+id/buttonGrain2"
        android:layout_toEndOf="@+id/buttonVegetabes"
        android:onClick="sendmessage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:text="Dairy"
        android:id="@+id/buttonDairy"
        android:layout_above="@+id/buttonVegetabes"
        android:layout_toStartOf="@+id/buttonProtein"
        android:onClick="sendmessage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:text="Proteins"
        android:id="@+id/buttonProtein"
        android:layout_alignTop="@+id/buttonDairy"
        android:layout_toEndOf="@+id/buttonVegetabes"
        android:onClick="sendmessage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Fats/Sweets"
        android:id="@+id/buttonFatsSweets"
        android:layout_above="@+id/buttonDairy"
        android:layout_toStartOf="@+id/buttonGrain3"
        android:onClick="sendmessage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daily Food Pyramid"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
